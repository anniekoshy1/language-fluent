<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="library_pane" prefHeight="920.0" prefWidth="527.0" style="-fx-background-color: #F7F7F7; -fx-border-radius: 30; -fx-background-radius: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.AssessmentController">
    <!-- Apply stylesheet using URL -->

    <children>
        <!-- Question Label -->
        <Label fx:id="question" layoutX="222.0" layoutY="264.0" text="Question will appear here" textAlignment="CENTER" />

        <!-- Answer Input -->
        <TextField fx:id="answerField" layoutX="150.0" layoutY="320.0" prefWidth="230.0" promptText="Enter your answer" />

        <!-- Submit Button -->
        <Button fx:id="submitButton" layoutX="150.0" layoutY="360.0" text="Submit" onAction="#submitAnswer" />

        <!-- Next Button -->
        <Button fx:id="nextButton" layoutX="150.0" layoutY="400.0" text="Next" onAction="#nextQuestion" disable="true" />

        <!-- Score Label -->
        <Label fx:id="scoreLabel" layoutX="400.0" layoutY="20.0" text="Score: 0" />

        <!-- Final Result Label (for score percentage) -->
        <Label fx:id="resultLabel" layoutX="150.0" layoutY="450.0" text="" textAlignment="CENTER" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
    </children>
</AnchorPane>
