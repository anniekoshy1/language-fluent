<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="920.0" prefWidth="527.0" style="-fx-background-color: #F7F7F7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Status Bar -->
        <ImageView fx:id="statusBar" fitHeight="53.0" fitWidth="522.0" layoutX="0.0" layoutY="0.0">
            <image>
                <Image url="@../../images/bar.png" />
            </image>
        </ImageView>

        <!-- Header -->
        <ImageView fx:id="bookIcon" fitHeight="70.0" fitWidth="70.0" layoutX="18.0" layoutY="70.0">
            <image>
                <Image url="@../../images/courseicon.png" />
            </image>
        </ImageView>

        <Label fx:id="flashcardsTitle" layoutX="110.0" layoutY="90.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Flashcards" />

        <!-- Close Button -->
        <Button fx:id="closeButton" layoutX="202.0" layoutY="470.0" prefHeight="50.0" prefWidth="124.0" style="-fx-background-color: #FFA726; -fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Close" />

        <!-- Navigation Bar -->
        <AnchorPane fx:id="bottomNavBar" layoutY="800.0" prefHeight="70.0" prefWidth="527.0" style="-fx-background-color: #F7F7F7;">
            <children>
                <!-- Home -->
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="43.0" layoutY="7.0">
                    <image>
                        <Image url="@../../images/home.png" />
                    </image>
                </ImageView>
                <Label layoutX="28.0" layoutY="42.0" text="Home" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>